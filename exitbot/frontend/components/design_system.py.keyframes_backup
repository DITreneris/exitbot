"""
ExitBot Design System - Core design tokens and utilities

This module defines the core design tokens (colors, typography, spacing) and 
utility functions for consistent styling across the ExitBot applications.
"""

# ----- COLORS -----
# Primary Colors
PRIMARY_900 = "#1E3A8A"  # Deep blue - Primary actions, active states
PRIMARY_800 = "#1E40AF"  # Standard blue - Primary buttons
PRIMARY_700 = "#1D4ED8"  # Medium blue - Hover states
PRIMARY_600 = "#2563EB"  # Light blue - Selected items
PRIMARY_500 = "#3B82F6"  # Lighter blue - Progress bars, highlights
PRIMARY_400 = "#60A5FA"  # Very light blue - Borders, minor UI elements
PRIMARY_200 = "#BFDBFE"  # Soft blue - Light borders, backgrounds
PRIMARY_100 = "#DBEAFE"  # Pale blue - Backgrounds, inactive states
PRIMARY_50 = "#EFF6FF"   # Almost white blue - Subtle backgrounds

# Neutral Colors
NEUTRAL_900 = "#111827"  # Very dark gray - Main text, headings
NEUTRAL_800 = "#1F2937"  # Dark gray - Secondary text
NEUTRAL_700 = "#374151"  # Medium dark gray - Subheadings
NEUTRAL_600 = "#4B5563"  # Medium gray - Body text
NEUTRAL_500 = "#6B7280"  # Gray - Secondary information, placeholders
NEUTRAL_400 = "#9CA3AF"  # Light gray - Disabled text, tertiary information
NEUTRAL_300 = "#D1D5DB"  # Very light gray - Borders, dividers
NEUTRAL_200 = "#E5E7EB"  # Almost white gray - Light borders, backgrounds
NEUTRAL_100 = "#F3F4F6"  # Off-white - Card backgrounds, subtle highlights
NEUTRAL_50 = "#F9FAFB"   # Nearly white - Page backgrounds

# Semantic Colors
SUCCESS_700 = "#047857"  # Dark green - Strong success elements
SUCCESS_500 = "#10B981"  # Medium green - Success buttons, states
SUCCESS_100 = "#D1FAE5"  # Light green - Success backgrounds

WARNING_700 = "#B45309"  # Dark amber - Strong warning elements
WARNING_500 = "#F59E0B"  # Medium amber - Warning indicators
WARNING_100 = "#FEF3C7"  # Light amber - Warning backgrounds

ERROR_700 = "#B91C1C"    # Dark red - Strong error elements
ERROR_500 = "#EF4444"    # Medium red - Error states, alerts
ERROR_100 = "#FEE2E2"    # Light red - Error backgrounds

# ----- TYPOGRAPHY -----
# Font Family
FONT_FAMILY = "'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif"

# Font Sizes (in rem)
FONT_SIZE_XS = "0.75rem"    # 12px - Small labels, footnotes
FONT_SIZE_SM = "0.875rem"   # 14px - Secondary text, captions
FONT_SIZE_BASE = "1rem"     # 16px - Body text
FONT_SIZE_LG = "1.125rem"   # 18px - Large body text
FONT_SIZE_XL = "1.25rem"    # 20px - Subheadings
FONT_SIZE_2XL = "1.5rem"    # 24px - Section headings
FONT_SIZE_3XL = "1.875rem"  # 30px - Page headings
FONT_SIZE_4XL = "2.25rem"   # 36px - Major headings

# Font Weights
FONT_WEIGHT_NORMAL = "400"
FONT_WEIGHT_MEDIUM = "500"
FONT_WEIGHT_SEMIBOLD = "600"
FONT_WEIGHT_BOLD = "700"

# Line Heights
LINE_HEIGHT_TIGHT = "1.25"
LINE_HEIGHT_NORMAL = "1.5"
LINE_HEIGHT_RELAXED = "1.75"

# ----- SPACING -----
# Base spacing unit: 4px (in rem)
SPACING_0 = "0"
SPACING_1 = "0.25rem"  # 4px
SPACING_2 = "0.5rem"   # 8px
SPACING_3 = "0.75rem"  # 12px
SPACING_4 = "1rem"     # 16px
SPACING_5 = "1.25rem"  # 20px
SPACING_6 = "1.5rem"   # 24px
SPACING_8 = "2rem"     # 32px
SPACING_10 = "2.5rem"  # 40px
SPACING_12 = "3rem"    # 48px
SPACING_16 = "4rem"    # 64px
SPACING_20 = "5rem"    # 80px
SPACING_24 = "6rem"    # 96px

# ----- BORDERS & SHADOWS -----
BORDER_RADIUS_SM = "4px"
BORDER_RADIUS_MD = "8px"
BORDER_RADIUS_LG = "12px"
BORDER_RADIUS_XL = "16px"
BORDER_RADIUS_FULL = "9999px"

SHADOW_SM = "0 1px 2px 0 rgba(0, 0, 0, 0.05)"
SHADOW_MD = "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)"
SHADOW_LG = "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)"

# ----- UTILITY FUNCTIONS -----
def get_base_css():
    """
    Returns the base CSS for the application, incorporating the design tokens
    """
    return f"""
    <style>
    /* Base styles and typography */
    html, body, [class*="st-"] {{{{{{{{{{{{{{{{
        font-family: {FONT_FAMILY};
        background-color: {NEUTRAL_50};
        color: {NEUTRAL_800};
    }}}}}}}}}}}}}}}}

    /* Typography */
    h1, h2, h3 {{{{{{{{{{{{{{{{
        color: {NEUTRAL_900};
        font-weight: {FONT_WEIGHT_BOLD};
        letter-spacing: -0.025em;
    }}}}}}}}}}}}}}}}

    p, div {{{{{{{{{{{{{{{{
        color: {NEUTRAL_700};
        line-height: {LINE_HEIGHT_NORMAL};
    }}}}}}}}}}}}}}}}

    /* Streamlit Buttons */
    div.stButton > button {{{{{{{{{{{{{{{{
        border-radius: {BORDER_RADIUS_LG};
        background-color: {PRIMARY_800};
        color: #FFFFFF;
        border: 1px solid {PRIMARY_800};
        padding: {SPACING_3} {SPACING_4};
        font-weight: {FONT_WEIGHT_SEMIBOLD};
        transition: all 0.2s ease;
    }}}}}}}}}}}}}}}}

    div.stButton > button:hover {{{{{{{{{{{{{{{{
        background-color: {PRIMARY_700};
        border-color: {PRIMARY_700};
        color: #FFFFFF;
    }}}}}}}}}}}}}}}}
    
    div.stButton > button:focus {{{{{{{{{{{{{{{{
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.4);
    }}}}}}}}}}}}}}}}

    /* Enhanced Error Container */
    .error-container {{{{{{{{{{{{{{{{
        background-color: {ERROR_100};
        border: 1px solid {ERROR_500};
        border-radius: {BORDER_RADIUS_LG};
        padding: {SPACING_6};
        margin-bottom: {SPACING_6};
        display: flex;
        gap: {SPACING_4};
        align-items: flex-start;
    }}}}}}}}}}}}}}}}
    
    .error-icon {{{{{{{{{{{{{{{{
        font-size: {FONT_SIZE_3XL};
        min-width: 40px;
        text-align: center;
    }}}}}}}}}}}}}}}}
    
    .error-content h3 {{{{{{{{{{{{{{{{
        color: {ERROR_700};
        margin-top: 0;
        margin-bottom: {SPACING_2};
    }}}}}}}}}}}}}}}}
    
    .error-content p {{{{{{{{{{{{{{{{
        margin-bottom: {SPACING_3};
    }}}}}}}}}}}}}}}}
    
    .error-content ul {{{{{{{{{{{{{{{{
        margin-bottom: {SPACING_4};
        color: {NEUTRAL_700};
    }}}}}}}}}}}}}}}}
    
    .error-action {{{{{{{{{{{{{{{{
        font-weight: {FONT_WEIGHT_MEDIUM};
        color: {ERROR_700} !important;
    }}}}}}}}}}}}}}}}

    /* Streamlit Inputs */
    .stTextInput, .stDateInput, .stSelectbox {{{{{{{{{{{{{{{{
        border-radius: {BORDER_RADIUS_LG};
    }}}}}}}}}}}}}}}}
    
    .stTextInput input, .stDateInput input, .stSelectbox > div[data-baseweb="select"] > div {{{{{{{{{{{{{{{{
        border-radius: {BORDER_RADIUS_LG} !important;
        border: 1px solid {NEUTRAL_200} !important;
        background-color: #FFFFFF !important;
        padding: {SPACING_2} {SPACING_3} !important;
        color: {NEUTRAL_800} !important;
    }}}}}}}}}}}}}}}}
    
    /* Placeholder text color */
    ::placeholder {{{{{{{{{{{{{{{{ 
        color: {NEUTRAL_400} !important;
        opacity: 1; 
    }}}}}}}}}}}}}}}}
    
    /* Streamlit Alerts */
    .stAlert {{{{{{{{{{{{{{{{
        border-radius: {BORDER_RADIUS_LG};
        padding: {SPACING_4} {SPACING_6};
        border: 1px solid;
    }}}}}}}}}}}}}}}}
    
    /* Success Alert */
    div[data-testid="stAlert"] [data-testid="stNotification"] {{{{{{{{{{{{{{{{
        border-color: {SUCCESS_500} !important;
        background-color: {SUCCESS_100} !important;
        color: {SUCCESS_700} !important;
    }}}}}}}}}}}}}}}}
    
    /* Error Alert */
    div[data-testid="stAlert"][width="initial"] > div {{{{{{{{{{{{{{{{
        border-color: {ERROR_500} !important;
        background-color: {ERROR_100} !important;
        color: {ERROR_700} !important;
    }}}}}}}}}}}}}}}}
    
    /* Info Alert */
    div[data-testid="stInfo"] {{{{{{{{{{{{{{{{
        border-radius: {BORDER_RADIUS_LG};
        padding: {SPACING_4} {SPACING_6};
        background-color: {PRIMARY_50} !important;
        color: {PRIMARY_800} !important;
        border: 1px solid {PRIMARY_100} !important;
    }}}}}}}}}}}}}}}}
    
    /* Warning Alert */
    div[data-testid="stWarning"] {{{{{{{{{{{{{{{{
        border-radius: {BORDER_RADIUS_LG};
        padding: {SPACING_4} {SPACING_6};
        background-color: {WARNING_100} !important;
        color: {WARNING_700} !important;
        border: 1px solid {WARNING_100} !important;
    }}}}}}}}}}}}}}}}

    /* Card styling */
    .card {{{{{{{{{{{{{{{{
        border-radius: {BORDER_RADIUS_XL};
        background-color: #FFFFFF;
        border: 1px solid {NEUTRAL_200};
        padding: {SPACING_6};
        margin-bottom: {SPACING_4};
        box-shadow: {SHADOW_SM};
    }}}}}}}}}}}}}}}}
    
    .metric-card {{{{{{{{{{{{{{{{
        text-align: center;
        color: {NEUTRAL_800};
    }}}}}}}}}}}}}}}}
    
    .metric-value {{{{{{{{{{{{{{{{
        font-size: {FONT_SIZE_4XL};
        font-weight: {FONT_WEIGHT_BOLD};
        color: {PRIMARY_800};
        margin-top: {SPACING_2};
    }}}}}}}}}}}}}}}}
    
    /* Sidebar Styling */
    div[data-testid="stSidebarUserContent"] {{{{{{{{{{{{{{{{
        background-color: #FFFFFF;
        padding: {SPACING_6} !important;
    }}}}}}}}}}}}}}}}
    
    div[data-testid="stSidebarUserContent"] h1 {{{{{{{{{{{{{{{{
        color: {PRIMARY_800} !important;
        font-size: {FONT_SIZE_2XL};
        margin-bottom: {SPACING_4};
    }}}}}}}}}}}}}}}}
    
    /* Animations */
    @keyframes fadeIn {{{{{{{{{{{{{{{{
        from {{{{{{{{{{{{{{{{ opacity: 0; transform: translateY(10px); }}}}}}}}}}}}}}}}
        to {{{{{{{{{{{{{{{{ opacity: 1; transform: translateY(0); }}}}}}}}}}}}}}}}
    }}}}}}}}}}}}}}}}

    .animate-fade-in {{{{{{{{{{{{{{{{
        animation: fadeIn 0.5s ease forwards;
    }}}}}}}}}}}}}}}}
    
    /* Accessibility improvements */
    .screen-reader-only {{{{{{{{{{{{{{{{
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border-width: 0;
    }}}}}}}}}}}}}}}}
    </style>
    """

